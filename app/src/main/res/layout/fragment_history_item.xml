<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/content_history_langs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="en-ru"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textAppearance="?attr/textAppearanceListItem" />
    <ImageButton
        android:id="@+id/favoritesImage"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:src="@drawable/ic_favorite_border_black_24dp"
        android:background="@android:color/transparent"/>
    <TextView
        android:id="@+id/content_history_source"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toEndOf="@id/favoritesImage"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/content_history_langs"
        android:paddingTop="5dp"
        android:text="Test"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/content_history_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/favoritesImage"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/content_history_langs"
        android:paddingBottom="5dp"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Test2"
        android:textAppearance="?attr/textAppearanceListItem" />


</RelativeLayout>
